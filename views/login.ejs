<%- include("partials/header") %> 

<!-- Changing the title dynamically according to the page -->
<script>
    document.title = "Welcome Back! | NoteTaker";
</script>
<section id="login" class="login">
    <div class="login-main container">
        <div class="minimal-frame">
            <img src="img/icon.png" alt="NoteTaker_Logo">
            <h1 class="login-heading"><a href="/">NoteTaker</a></h1>
            <p class="login-para">Remember everything securely.</p>
            <div class="d-grid gap-2">
                <a class="btn btn-lg btn-outline-success btn-font" href="/auth/google" role="button"><i class="fab fa-google"></i>Continue with Google</a>
            </div>
            <p class="login-seperate">or</p>
            <p class="error-text"><%= errorMessages %> </p>
            <form method="POST" action="/login">
                <div class="mb-3">
                    <input type="email" class="form-control" name="username" placeholder="Email Address" autocomplete="off" required>
                </div>
                <div class="mb-3">
                  <input type="password" class="form-control" name="password" placeholder="Password" autocomplete="off" required>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">Continue</button>
                </div>
            </form>
            <div class="login-footer">
                <h5 class="forgot-password"><a href="/forgot_password">Forgot Password?</a></h5>
                <h1 class="login-display">Don't have an account?</h1>
                <a href="/signup" class="login-href">Create Account Here!</a>
                <p class="policy-footer">By clicking on continue, you are agreeing to our <a href="/terms_of_use">Terms of Service</a> and <a href="/privacy_policy">Privacy Policy.</a></p>
                <p class="policy-footer">Copyright Â© <script>document.write(new Date().getFullYear())</script> NoteTaker | All rights reserved.</p>
            </div>
        </div>
    </div>
</section>

<%- include("partials/footer") %> 